@model GaleriaArte_mvc.Models.Exposicion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Exposicion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a> |
    <a asp-action="SeleccionObras" asp-route-id="@Model.Id">Agregar Obras</a>
</div>


@if (Model.ObrasExpuestas == null || !Model.ObrasExpuestas.Any())
{
    <p>No hay obras publicadas</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obra in Model.ObrasExpuestas)
            {
                <tr>
                    <td>@obra.Titulo</td>
                    <td><img src="@obra.UrlImagen" height="50" /></td>
                </tr>
            }
        </tbody>
    </table>
}
